      "@conduit/article/data-access": [
        "libs/conduit/article/data-access/src/index.ts"
      ],
      "@conduit/article/article-read": [
        "libs/conduit/article/article-read/src/index.ts"
      ],
      "@conduit/article/articles-view": [
        "libs/conduit/article/articles/src/index.ts"
      ],
      "@core/error-handler": ["libs/core/error-handler/src/index.ts"],
      "@conduit/layout": ["libs/conduit/core/layout/src/index.ts"],
      "@conduit/profile": ["libs/conduit/profile/feature-profile/src/index.ts"],
      "@conduit/profile-edit-container": [
        "libs/conduit/profile/feature-profile-edit/src/index.ts"
      ],
      "@core/auth/data-access": ["libs/core/auth/data-access/src/index.ts"],
